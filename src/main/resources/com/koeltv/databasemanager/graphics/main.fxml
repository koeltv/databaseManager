<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.koeltv.databasemanager.graphics.MainController">
    <Tab text="Create">
        <BorderPane>
            <top>
                <FlowPane hgap="5.0" minHeight="45.0" BorderPane.alignment="CENTER">
                    <Label text="Table definition" />
                    <TextField prefWidth="400.0" promptText="TableName(att1, att2, ...)" />
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </padding>
                </FlowPane>
            </top>
            <bottom>
                <FlowPane alignment="CENTER_RIGHT" minHeight="40.0" BorderPane.alignment="CENTER">
                    <Button fx:id="connectButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" style="-fx-background-color: black;" text="Connect" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </FlowPane>
            </bottom>
            <center>
                <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
                    <FlowPane orientation="VERTICAL" />
                </ScrollPane>
            </center>
        </BorderPane>
    </Tab>
    <Tab disable="true" text="Insert">
        <FlowPane />
    </Tab>
    <Tab text="Select">
        <BorderPane>
            <center>
                <SplitPane dividerPositions="0.4" orientation="VERTICAL" BorderPane.alignment="CENTER">
                    <TextArea fx:id="selectQueryField" prefHeight="100.0" prefWidth="200.0" />
                    <TableView fx:id="resultTable" prefHeight="200.0" prefWidth="200.0">
                        <columns>
                            <TableColumn prefWidth="75.0" text="att1" />
                            <TableColumn prefWidth="75.0" text="att2" />
                        </columns>
                    </TableView>
                </SplitPane>
            </center>
            <bottom>
                <FlowPane alignment="CENTER_RIGHT" hgap="10.0" minHeight="40.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                    <Label fx:id="feedbackField" textFill="RED" />
                    <Button fx:id="selectButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" style="-fx-background-color: black;" text="Run" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>
                </FlowPane>
            </bottom>
        </BorderPane>
    </Tab>
    <Tab disable="true" text="Update">
        <FlowPane />
    </Tab>
    <Tab disable="true" text="Delete">
        <FlowPane />
    </Tab>
    <Tab disable="true" text="Populate">
        <FlowPane>
        </FlowPane>
    </Tab>
</TabPane>
